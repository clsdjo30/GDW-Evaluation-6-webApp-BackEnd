{% extends 'base.html.twig' %}

{% block title %}KGB - Connexion{% endblock %}

{% block body %}

    <div class="container-fluid banner d-flex justify-content-center align-items-center flex-column">
    <div class="row w-75 d-flex justify-content-center align-items-center flex-column">
    <div class="col-md-6">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a
                            href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal font-monospace text-white text-center mb-3">Connexion</h1>
            <div class="col mb-3">
                <label for="inputEmail" class="text-white font-monospace mb-1">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                       autocomplete="email" required autofocus>
            </div>
            <div class="col mb-2">
                <label for="inputPassword" class="text-white font-monospace mb-1">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                       autocomplete="current-password"
                       required>
            </div>
            <div class="checkbox mb-4">
                <label class="text-white font-monospace mb-1">
                    <input type="checkbox" name="_remember_me"> Rester connect√©
                </label>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div class="col">
                <button class="col-12  btn btn-lg btn-outline-secondary text-white font-monospace" type="submit">
                    Sign in
                </button>
            </div>

        </form>
    </div>


{% endblock %}
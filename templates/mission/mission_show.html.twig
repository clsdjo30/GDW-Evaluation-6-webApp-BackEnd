{% extends 'base.html.twig' %}

{% block title %}KGB - Détails de la mission{% endblock %}

{% block body %}
    {{ include('partials/_header.html.twig') }}
    <div class="bg-dark py-3">
        <div class="container py-5 mb-5">

            <div class="row row-cols-2 justify-content-center pt-5 mb-5">

                <div class="col-8 gap-5">
                    <div class="card  rounded-3 shadow-card bg-secondary bg-opacity-25">
                        <div class="card-body">

                            <h1 class="card-title text-center text-danger">
                                {{ mission.title }}
                            </h1>
                            <h5 class="card-title text-warning">
                                nomde code : {{ mission.codeName }}
                            </h5>
                            <div class="d-flex justify-content-start bg-transparent border-secondary pt-2">
                                <ul class="list-unstyled">
                                    <li class="text-light">Date de début de mission
                                        : {{ mission.startAt | date('d-m-Y') }}</li>
                                    <li class="text-light">Date de fin de mission
                                        : {{ mission.endAt | date('d-m-Y') }}</li>
                                    <li class="text-light">Pays de mission: {{ mission.country }} </li>
                                    <li class="text-light">Type de mission : {{ mission.type }} </li>
                                    <li class="text-light">Status de la mission : {{ mission.status }}</li>
                                </ul>
                            </div>
                            <hr class="mt-0">
                            <h5 class="text-warning">Déscriptif de la mission</h5>
                            <p class="card-text text-light lead">
                                {{ mission.description }}
                            </p>
                            <hr class="">
                            {# Ajout d'un collapse pour voir les contact, la planque, et les agent #}
                            <div class="d-flex flex-column justify-content-start bg-transparent border-secondary pt-2">
                                <h5 class="card-title text-info">
                                    Détails de la mission
                                </h5>
                                {# ligne de boutton #}
                                <p>
                                    {# Button pour la Cible #}
                                    <button class="btn btn-outline-secondary"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#target"
                                            aria-expanded="false"
                                            aria-controls="collapseExample">

                                        {{ pluralize(mission.targets | length, 'Cible', 'Cibles') }}


                                    </button>
                                    {# Button pour le Contact #}
                                    <button class="btn btn-outline-secondary"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#contact"
                                            aria-expanded="false"
                                            aria-controls="collapseExample">
                                        {{ pluralize(mission.contacts | length, 'Contact', 'Contact') }}
                                    </button>
                                    {# Button pour la planque #}
                                    <button class="btn btn-outline-secondary"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#hideout"
                                            aria-expanded="false"
                                            aria-controls="collapseExample">
                                        {{ pluralize(mission.hideout | length, 'Planque', 'Planques') }}
                                    </button>
                                    {# Button pour les agent #}
                                    <button class="btn btn-outline-secondary"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#agent"
                                            aria-expanded="false"
                                            aria-controls="collapseExample">
                                        {{ pluralize(mission.agents | length, 'Agent', 'Agents') }}
                                    </button>

                                </p>
                                {# Block contenant le detail de chaque boutton #}
                                {# Contenu de detail pour la cible #}
                                <div class="collapse" id="target">
                                    <div class="card card-body bg-transparent">
                                        <h6 class="text-warning">Cible</h6>
                                        <div class="row row-cols-1 row-cols-md-2 g-1">
                                            {% for target in mission.targets %}
                                                <div class="col">
                                                    <div class="card h-100 bg-transparent">
                                                        <div class="card-body">
                                                            <h5 class="card-title text-danger"> {{ target.firstname }} {{ target.lastname }}</h5>
                                                            <ul class="list-group list-unstyled p-2">
                                                                <li class="text-light">
                                                                    <strong> <u>Nom de code: </u>
                                                                    </strong>{{ target.codename }}
                                                                </li>
                                                                <li class="text-light">
                                                                    <strong><u>Date de
                                                                            naissance: </u></strong> {{ target.birthday | date('d-m-Y') }}
                                                                </li>
                                                                <li class="text-light">
                                                                    <strong><u>Nationnalité: </u></strong> {{ target.country.nationality }}
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>

                                                </div>
                                            {% endfor %}
                                        </div>

                                    </div>
                                </div>
                                {# Contenu de detail pour le contact #}
                                <div class="collapse" id="contact">
                                    <div class="card card-body bg-transparent">
                                        <h6 class="text-warning">Contact</h6>
                                        <div class="row row-cols-1 row-cols-md-2 g-1">
                                            {% for contact in mission.contacts %}
                                                <div class="col">
                                                    <div class="card h-100 bg-transparent">
                                                        <div class="card-body">
                                                            <h5 class="card-title text-danger"> {{ contact.firstname }} {{ contact.lastname }}</h5>
                                                            <ul class="list-group list-unstyled p-2">
                                                                <li class="text-light">
                                                                    <strong> <u>Nom de code: </u>
                                                                    </strong>{{ contact.codename }}
                                                                </li>
                                                                <li class="text-light">
                                                                    <strong><u>Date de
                                                                            naissance: </u></strong> {{ contact.birthday | date('d-m-Y') }}
                                                                </li>
                                                                <li class="text-light">
                                                                    <strong><u>Nationnalité: </u></strong> {{ contact.country.nationality }}
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>

                                                </div>
                                            {% endfor %}
                                        </div>

                                    </div>
                                </div>
                                {# Contenu de detail pour la planque #}
                                <div class="collapse" id="hideout">
                                    <div class="card card-body bg-transparent">
                                        <h6 class="text-warning">Planque</h6>
                                        <div class="row row-cols-1 row-cols-md-2 g-1">
                                            {% for hideout in mission.hideout %}
                                                <div class="col">
                                                    <div class="card h-100 bg-transparent">
                                                        <div class="card-body">
                                                            <h5 class="card-title text-danger"> {{ hideout.code }}</h5>
                                                            <ul class="list-group list-unstyled p-2">
                                                                <li class="text-light">
                                                                    <strong> <u>Nom de code: </u>
                                                                    </strong>{{ hideout.address }}
                                                                </li>
                                                                >
                                                                <li class="text-light">
                                                                    <strong><u>Pays: </u></strong> {{ hideout.country }}
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>

                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                                {# Contenu de detail pour les agent #}
                                <div class="collapse" id="agent">
                                    <div class="card card-body bg-transparent">
                                        <h6 class="text-warning">Agent</h6>
                                        <div class="row row-cols-1 row-cols-md-2 g-1">
                                            {% for agent in mission.agents %}
                                                <div class="col">
                                                    <div class="card h-100 bg-transparent">
                                                        <div class="card-body">
                                                            <h5 class="card-title text-danger"> {{ agent.firstname }} {{ agent.lastname }}</h5>
                                                            <ul class="list-group list-unstyled p-2">
                                                                <li class="text-light">
                                                                    <strong> <u>Nom de code:</u>
                                                                    </strong>{{ agent.codename }}
                                                                </li>
                                                                <li class="text-light">
                                                                    <strong><u>Date de
                                                                            naissance:</u></strong> {{ agent.birthday | date('d-m-Y') }}
                                                                </li>
                                                                <li class="text-light">
                                                                    <strong><u>Nationnalité:</u></strong> {{ agent.country.nationality }}
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>

                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                        <div class="d-flex justify-content-end card-footer bg-transparent border-secondary">
                            <a href="{{ path('app_mission') }}" class="btn btn-outline-secondary">Revenir aux
                                missions</a>
                        </div>
                    </div>
                </div>


            </div>
        </div>

    </div>
{% endblock %}

